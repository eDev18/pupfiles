#!/bin/sh

# Bar variables
export PANEL_FIFO="/tmp/panel-fifo"
export PANEL_HEIGHT=16

if [ $(pgrep -cx panel) -gt 1 ] ; then
    printf "%s\n" "The panel is already running." >&2
    exit 1
fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"

panel_cpu     > "$PANEL_FIFO" &
<% if @laptop %>
panel_battery > "$PANEL_FIFO" &
<% end %>
panel_memory  > "$PANEL_FIFO" &
panel_load    > "$PANEL_FIFO" &
panel_volume  > "$PANEL_FIFO" &
bspc control --subscribe > "$PANEL_FIFO" &
#clock -sf 'panel_clock%{F#909090}%a %b %d, %I:%M %p%{F-}' > "$PANEL_FIFO" &

cat "$PANEL_FIFO" | panel_bar | bar-aint-recursive -u 2 -f '-gohu-gohufont-medium-*' -B '#262729' &
wait
