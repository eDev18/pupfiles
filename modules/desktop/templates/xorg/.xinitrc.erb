# Set X cursor to left pointer.
xsetroot -cursor_name left_ptr

# Pulseaudio
pulseaudio --start --daemonize

# Set X resources
xset +fp /usr/share/fonts/local/
xset fp rehash
[[ -f ~/.config/Xresources ]] && xrdb -load ~/.config/Xresources
xrdb -merge ~/.colors/base16-tomorrow.dark.xresources

# Urxvtd
urxvtd -q -o -f &

# Wallpaper
hsetroot -fill ~/.wallpapers/winterMountains.jpg

# Redshift
~/.redshift.sh &

# Fix Java window errors (e.g. IntelliJ)
wmname LG3D

# Key bindings
#sxhkd &
xbindkeys &

# Set keyboard layout
#setxkbmap -layout se

# WM
exec ~/.config/2bwm/wm

pulseaudio --kill
